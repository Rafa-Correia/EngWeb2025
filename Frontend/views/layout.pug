doctype html
html
  head
    title Frontend
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/w3.css')
    script(src='/javascripts/nav.js')
    block head
  body(class='w3-light-grey')

    // Navbar alinhada
    .w3-bar.w3-dark-grey.w3-padding
      span(class='w3-bar-item w3-xlarge w3-text-white') ENGWEB 2025 - #{date}
      a(href='/', class='w3-bar-item w3-button w3-grey w3-margin-right w3-margin-top w3-margin-down w3-margin-left w3-round-large') Início
      span#nav-buttons(class='w3-bar-item w3-right')

    // Espaço para compensar altura da navbar
    div(style="margin-top:60px")
      block content
    