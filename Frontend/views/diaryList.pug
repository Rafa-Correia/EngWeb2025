extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1 
                span Lista de Entradas

        .w3-container
            table.w3-table-all
                tr 
                    th Title    
                    th Descricao
                each item in diaryEntries
                    tr
                        td= item.title
                        td= item.metadata.descricao

    a(href="/diary/create") Create a post
